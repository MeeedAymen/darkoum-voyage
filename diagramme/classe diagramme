classDiagram
    class Client {
        +int id
        +string firstName
        +string lastName
        +string email
        +string phoneNumber
        +string address
        +date registrationDate
    }

    class Provider {
        +int id
        +string companyName
        +string contactPerson
        +string email
        +string phoneNumber
        +string address
        +string serviceType
        +boolean isActive
    }

    class Article {
        +int id
        +string title
        +string description
        +float price
        +string category
        +int providerId
        +date creationDate
        +boolean isAvailable
    }

    class Pack {
        +int id
        +string name
        +string description
        +float price
        +date startDate
        +date endDate
        +int[] includedArticlesIds
    }

    class Vente {
        +int id
        +int clientId
        +int articleOrPackId
        +date saleDate
        +float totalAmount
        +string paymentMethod
        +string status
    }

    class User {
        +int id
        +string username
        +string password
        +string email
        +string role
        +date lastLogin
        +boolean isActive
    }

    Client "1" -- "*" Vente : makes
    Provider "1" -- "*" Article : provides
    Article "*" -- "*" Pack : included in
    Vente "*" -- "1" User : processed by